{
  "name": "danger-plugin-notion-tasks",
  "description": "Manage your Notion's tasks inside GitHub",
  "author": "Diego Pasquali",
  "repository": {
    "type": "git",
    "url": "https://github.com/dgopsq/danger-plugin-notion-tasks.git"
  },
  "bugs": {
    "url": "https://github.com/dgopsq/danger-plugin-notion-tasks/issues"
  },
  "homepage": "https://github.com/dgopsq/danger-plugin-notion-tasks#readme",
  "keywords": [
    "danger",
    "danger-plugin",
    "notion"
  ],
  "version": "0.0.0-development",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "prepublish": "npm run build",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "prettier": "prettier",
    "prettier-write": "npm run prettier -- --parser typescript --no-semi --trailing-comma es5 --write --print-width 120",
    "prettier-project": "npm run prettier-write -- 'src/**/*.{ts,tsx}'",
    "lint": "eslint \"src/**/*.ts\"",
    "postinstall": "npm run build"
  },
  "license": "MIT",
  "engines": {
    "node": ">=4.0.0"
  },
  "devDependencies": {
    "@notionhq/client": "^2.2.3",
    "@types/jest": "^29.4.0",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "danger": "*",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "jest": "^29.4.1",
    "prettier": "^1.3.1",
    "semantic-release": "^6.3.6",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(.test)\\.(ts|tsx)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/"
    ]
  }
}
